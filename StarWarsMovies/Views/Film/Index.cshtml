@model List<Film>

    @if (Model.Count() > 0)
    {
    <table class="table table-bordered table-striped" style="width:100%">
        <thead>
            <tr>
                <th>
                    Episode
                </th>
                <th>
                    Title
                </th>
                <th>
                    Details
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
                {
            <tr>
                <td width="30%">@item.EpisodeId</td>
                <td width="30%">@item.Title</td>
                <td width="30%">
                    <a asp-controller="Film" asp-action="FilmDetails" asp-route-Id="@Model.IndexOf(item)">Details</a>
                </td>
            </tr>
                }
        </tbody>
    </table>
    }
    else 
    {
    <p>No items</p>
    }


